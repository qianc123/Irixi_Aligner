<Window x:Class="Irixi_Aligner_Common.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Irixi_Aligner_Common"
        mc:Ignorable="d"
        Title="Irixi Aligner" 
        Height="200" 
        Width="500" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Topmost="False"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="Resources/Images/splash_background.png" Stretch="Fill" Grid.RowSpan="3"/>
        <TextBlock 
            x:Name="txtMessage" 
            Grid.Row="1" 
            Text="" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left" 
            Margin="10,0,0,0" 
            Foreground="White"/>
        <TextBlock 
            x:Name="txtVersionInfo" 
            Text="v1.0.0" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Left" 
            Margin="10,0,0,0" 
            Foreground="#7FFFFFFF" 
            Grid.Row="2"/>
    </Grid>
</Window>
