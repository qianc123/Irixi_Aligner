<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Irixi_Aligner_Common.Windows"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"    
   xmlns:convert="clr-namespace:Irixi_Aligner_Common.Classes.Converters"
    xmlns:UserControls="clr-namespace:Irixi_Aligner_Common.UserControls" x:Class="Irixi_Aligner_Common.Windows.WinAlignmentXD"
        mc:Ignorable="d"
        Title="Alignment xD" Height="650" Width="900" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:ConvertToAlignmentXDArgs x:Key="ToAlignmentXDArgs"/>
        <convert:BooleanToVisibility x:Key="BoolToVisibility"/>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource Locator}}" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <dx:GroupFrame Header="Alignment Settings">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Motion Components" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0"/>
                <ComboBox x:Name="comboBox" VerticalAlignment="Center" VerticalContentAlignment="Center" ItemsSource="{Binding Service.LogicalMotionComponentCollection}" Grid.Row="1" Margin="0,0,5,0"/>
                <TextBlock Text="Instrument" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="1"/>
                <ComboBox x:Name="comboBox1" VerticalAlignment="Center" VerticalContentAlignment="Center" ItemsSource="{Binding Service.MeasurementInstrumentCollection}" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>
                <TextBlock Text="Measurement Target" Grid.Row="2" VerticalAlignment="Center"/>
                <dxe:TextEdit x:Name="txtTarget" Grid.Row="3" Text="0" VerticalAlignment="Center" Margin="0,0,5,0" MaskSaveLiteral="False" MaskShowPlaceHolders="False" MaskType="Numeric" Mask="######.######"/>
                <TextBlock Text="Max Cycles" Grid.Row="2" VerticalAlignment="Center" Grid.Column="1" Margin="5,0,0,0"/>
                <dxe:TextEdit x:Name="txtMaxCycles" Grid.Row="3" Text="1" VerticalAlignment="Center" Grid.Column="1" Margin="5,0,0,0" MaskShowPlaceHolders="False" MaskSaveLiteral="False" MaskType="Numeric" Mask="##"/>
            </Grid>
        </dx:GroupFrame>
        <dx:GroupFrame Grid.Row="1" Header="Axis Params">
            <Grid>
                <UserControls:AlignmentParamEditPanel x:Name="plParamEdit" Grid.Row="1" MotionComponent="{Binding SelectedItem, ElementName=comboBox}"/>
            </Grid>
        </dx:GroupFrame>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Start" Margin="8" Command="{Binding Service.CommandDoAlignmentXD, Mode=OneWay}">
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource ToAlignmentXDArgs}">
                        <!-- Logical Motion Component used to align -->
                        <Binding Path="MotionComponent" ElementName="plParamEdit" Mode="OneWay"/>
                        <!-- Measurement instrument -->
                        <Binding Path="SelectedItem" ElementName="comboBox1" Mode="OneWay"/>
                        <!-- Target measurement value -->
                        <Binding Path="Text" ElementName="txtTarget" Mode="OneWay"/>
                        <!-- maximum cycyles to align -->
                        <Binding Path="Text" ElementName="txtMaxCycles" Mode="OneWay"/>
                        <!-- Arguments of each activity axis -->
                        <Binding Path="ArgsCollection" ElementName="plParamEdit" Mode="OneWay"/>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
            <Button Content="Stop" Grid.Column="1" Margin="8"/>
        </Grid>
        <dxc:ChartControl Grid.Column="1" Grid.RowSpan="4" Margin="5" >
            <dxc:ChartControl.Legends>
                <dxc:Legend HorizontalPosition="Left" VerticalPosition="Top" Orientation="Horizontal"/>
            </dxc:ChartControl.Legends>
            <dxc:XYDiagram2D SeriesItemsSource="{Binding ElementName=plParamEdit, Path=ArgsCollection, Mode=OneWay}">
                <dxc:XYDiagram2D.SeriesItemTemplate>
                    <DataTemplate>
                        <!--Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibility}}"-->
                        <dxc:LineSeries2D Visibility="Hidden"  DataSource="{Binding ScanCurve}" ValueDataMember="Y" ArgumentDataMember="X" DisplayName="{Binding Axis.AxisName}"/>
                    </DataTemplate>
                </dxc:XYDiagram2D.SeriesItemTemplate>
            </dxc:XYDiagram2D>
        </dxc:ChartControl>
    </Grid>
</Window>
